<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <corners android:radius="4dp" />

            <gradient
                android:angle="90"
                android:endColor="#56ee84"
                android:startColor="#379c41"
                android:type="linear" />

        </shape>
    </item>
    <item>
        <shape>

            <corners android:radius="4dp" />

            <gradient
                android:angle="90"
                android:endColor="#28d634"
                android:startColor="#21da46"
                android:type="linear" />

            <stroke
                android:width="0.5dp"
                android:color="#10ea1e" />

        </shape>
    </item>
</selector>